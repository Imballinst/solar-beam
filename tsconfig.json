{
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2015",
    "moduleResolution": "Node",
    "outDir": "lib/",
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  }
}
